{
  "ConnectionStrings": {
    "SqlServer": "data source=.; initial catalog=Ebd_Dev; Trusted_Connection=True;TrustServerCertificate=true;MultipleActiveResultSets=true;"
  },
  "DataBaseConfiguration": {
    "TimeoutInSeconds": 1000,
    "MaxTimeInSeconds": 10,
    "RetryOnFailure": {
      "Enable": true,
      "MaxTimeOutInSeconds": 15,
      "RetryCount": 3
    },
    "MySql": {
      "Version": "10.2.2"
    }
  },
  "AppPath": "/ebd",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AzureLogging": {
    "FileName": "azure-diagnostics-",
    "FileSizeLimit": 50024,
    "RetainedFileCountLimit": 5
  },
  "AllowedHosts": "*"
}

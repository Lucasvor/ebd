{
    "version": "0.2.0",
    "configurations": [
        {
            // Use IntelliSense to find out which attributes exist for C# debugging
            // Use hover for the description of the existing attributes
            // For further information visit https://github.com/dotnet/vscode-csharp/blob/main/debugger-launchjson.md
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/EscolaBiblicaDominical/Ebd.Mobile/Ebd.MobileApp/bin/Debug/net8.0-ios/iossimulator-x64/Ebd.MobileApp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/EscolaBiblicaDominical/Ebd.Mobile/Ebd.MobileApp",
            // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            "name": ".NET MAUI iOS Simulator",
            "type": "maui",
            "request": "launch",
            "platform": "ios",
            "device": "simulator",
            "target": "iossimulator",
            "sourceFileMap": {
                "/": "${workspaceFolder}/EscolaBiblicaDominical/Ebd.Mobile/Ebd.MobileApp"
            }
        },
        {
            "name": ".NET MAUI Android Emulator",
            "type": "maui",
            "request": "launch",
            "platform": "android",
            "device": "emulator",
            "target": "androidemulator",
            "sourceFileMap": {
                "/": "${workspaceFolder}/EscolaBiblicaDominical/Ebd.Mobile/Ebd.MobileApp"
            }
        }
    ]
}